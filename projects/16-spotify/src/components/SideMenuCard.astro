---
import type { Playlist } from "@/lib/data"
interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, artists, color } = playlist

const artisListString = new Intl.ListFormat("en", { style: "long", type: "conjunction" }).format(artists)
---

<a href={`/playlist/${id}`} class='playlist-item flex relative p-2 overflow-hidden items-center gap-4 hover:bg-zinc-800 rounded-md'>
  <picture class='w-12 h-12 flex-shrink-0'>
    <img src={cover} alt={`Cover of ${title} - by ${artisListString}`} class='rounded-lg w-full h-full'  />
  </picture>
  <div class="flex flex-auto flex-col truncate">
    <h4 class="font-semibold text-sm">{title}</h4>
    <span class='text-zinc-400 text-xs'>{artisListString}</span>
  </div>
</a>
